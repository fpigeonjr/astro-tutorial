---
import Social from "./Social.astro"
const platforms = ["github", "linkedIn", "twitter"]
const username = "fpigeonjr"
---

<footer>
  Learn more about my projects on
  {
    platforms.map(
      (platform) =>
        (
          <Social
            class="social-link"
            platform={platform}
            username={username}
          />
        )!
    )
  }
</footer>

<style>
  footer {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    align-items: center;
  }
</style>
