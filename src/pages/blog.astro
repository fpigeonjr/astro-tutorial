---
import BaseLayout from "../layouts/BaseLayout.astro"
const pageTitle = "Posts"
const allPosts = await Astro.glob("../pages/posts/*.md")
---

<BaseLayout pageTitle={pageTitle}>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
